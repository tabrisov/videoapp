.preview
  color #444
  display flex
  
  +mobile()
    flex-direction column

  +desktop()
    flex-direction row
  
  &__close
    display block
    position absolute
    left 12px
    top 12px
    width 32px
    height 32px
    z-index 10
    cursor pointer
    opacity 0.8
    color #fff
    font-size 11px
    line-height 75px
    text-align center
    
    +mobile()
      position fixed

    &:hover
      opacity 1
    
    &::before
    &::after
      content ''
      position absolute
      background #FFF
      top 50%
      left 50%
      transform rotate(-45deg)
      border-radius 1px

    &::before
      width 24px
      height 2px
      margin-left -11px

    &::after
      height 24px
      width 2px
      margin-top -11px      

  &__backdrop
    position relative
    display block
    
    flex-shrink 0
    
    background-color #666
    background-size cover
    background-position center 0
    background-repeat no-repeat

    +mobile()
      height 200px
      width 100%

    +desktop()
      width 200px

    &::before
      position absolute
      content ''
      left 0
      right 0
      bottom 0
      top 0
      background rgba(#000, .4)
  
  &__info
    background #fff
    margin 0
    z-index 2
    max-height 100vh

    +mobile()
      padding 15px
      margin-top -8px
      border-radius 10px 10px 0 0

    +desktop()
      overflow auto
      padding 30px

  &__top
    display flex
    margin-bottom 20px

  &__poster
    display block
    position relative
    width 100px
    height 150px
    flex-shrink 0
    background-size cover
    background-position center 0
    background-repeat no-repeat

    +mobile()
      margin-top -45px

  &__header
    padding-left 15px
    flex-grow 1
  
  &__title-wrapper
    display flex
    justify-content space-between
    align-items center

  &__header-text
    margin 0 30px 0 0
    font-weight normal
    font-size 16px
    line-height 1.2
    color #ababab

  &__title
    display inline
    font-weight bold
    color #000

  &__year
    opacity 0.5

  &__rating
    display block
    flex-shrink 0
    width 48px
    height 28px
    line-height 28px
    border-radius 20px
    text-align center
    background #ffb10a
    color #fff
    font-size 15px
  
  &__tags
    margin 0px 0 10px
    font-size 11px
    color #a1cae5
  
    &-item:not(:last-child)::after
      content ', '

  &__popularity
    position relative
    display inline-block
    padding 3px 0 3px 20px
    font-size 11px
    
    &::after
    &::before
      content ''
      position absolute
      top 50%

    &::before
      display inline-block
      left 3px
      margin-top -6px
      width 12px
      height 12px
      background #8c8d8f
      border-radius 65% 0
      transform rotate(45deg)

    &::after
      position absolute
      display block
      margin-top -4px
      left 5px
      height 8px
      width 8px
      border-radius 100%
      border 1px solid #fff
      background #8c8d8f
      
  &__overview
    margin 0 0 20px
    font-size 14px
    line-height 1.2
  
  &__subtitle
    font-size 14px
    margin 0 0 10px

  &__cast
    display flex
    flex-wrap wrap
    margin-right -15px
    margin-left 0
    padding 0
    
  &__actor
    display flex
    flex-direction column
    position relative
    align-items center
    width 60px
    text-align center
    margin-bottom 15px

    &:not(:last-child)
      margin-right 15px
  
  &__actor-img-holder
    overflow hidden
    border-radius 20px
    width 40px
    height 40px
    margin-bottom 5px

  &__actor-img
    display block
    width 40px
    height 60px
    font-size 16px
    line-height 40px
    text-indent -3px
    color #fff
    font-weight bold
    text-align center
    background-color #ababab
    background-size cover
    background-position center 0
    background-repeat no-repeat
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    transition background-color .2s ease

    &:hover
      background-color #ccc

    &_more
      cursor pointer

  &__actor-name
    font-weight bold
  
  &__spinner
    width 60px
    height 90px
    
    &::after
      display block
      position absolute
      top 0
      left 50%
      margin-left -20px
      content ''
      width 40px
      height 40px
      display inline-block
      vertical-align middle
      position relative
      border-radius 50%
      border 3px solid #ccc
      border-top-color #99f
      transform translateZ(0)
      animation spin 1s infinite linear
  

@keyframes spin
  0% 
    transform rotate(0deg)
  100%
    transform rotate(360deg)
